<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:id="@+id/codigoSucursal"
        android:defaultValue="019"
        android:key="codigoSucursal"
        android:selectAllOnFocus="false"
        android:singleLine="true"
        android:persistent="true"
        android:summary="Codigo de Sucursal"
        android:title="Codigo de Sucursal" />


    <ListPreference
        android:defaultValue="15"
        android:entries="@array/pref_sync_frequency_titles"
        android:entryValues="@array/pref_sync_frequency_values"
        android:key="sync_frequency"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_sync_frequency" />

    <!-- This preference simply launches an intent when selected. Use this UI sparingly, per
         design guidelines. -->
    <Preference android:title="@string/pref_title_system_sync_settings">
        <intent android:action="android.settings.SYNC_SETTINGS" />
    </Preference>

    <SwitchPreference
        android:key="TestMode"
        android:summaryOff="Test Mode OFF."
        android:summaryOn="Test Mode ON."
        android:switchTextOff="Set Test Mode OFF."
        android:switchTextOn="Set Test Mode ON."
        android:persistent="true"/>

    <EditTextPreference
        android:id="@+id/servicesUrl"
        android:dependency="TestMode"
        android:defaultValue="http://server/Comercial15i/rest/LocationHistory/"
        android:key="servicesUrl"
        android:selectAllOnFocus="false"
        android:singleLine="true"
        android:persistent="true"
        android:summary="Service URL Summary..."
        android:title="Services URL" />

    <ListPreference
        android:id="@+id/GPSDistance"
        android:defaultValue="100"
        android:entries="@array/pref_gps_distance_titles"
        android:entryValues="@array/pref_gps_distance_values"
        android:key="GPSDistance"
        android:persistent="true"
        android:summary="GPS Distance in meters"
        android:title="GPS Distance" />

    <ListPreference
        android:id="@+id/GPSTime"
        android:defaultValue="10"
        android:key="GPSTime"
        android:entries="@array/pref_gps_time_titles"
        android:entryValues="@array/pref_gps_time_values"
        android:persistent="true"
        android:summary="GPS time in minutes"
        android:title="GPS Time" />

    <ListPreference
        android:id="@+id/workingDays"
        android:defaultValue="LV"
        android:key="workingDays"
        android:entries="@array/pref_workingdays_titles"
        android:entryValues="@array/pref_workingdays_values"
        android:persistent="true"
        android:summary="Working Days"
        android:title="Working Days" />

    <EditTextPreference
        android:id="@+id/initialTime"
        android:defaultValue="9"
        android:key="initialTime"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:persistent="true"
        android:summary="Initial time to start tracking."
        android:title="Initial Time" />

    <EditTextPreference
        android:id="@+id/endingTime"
        android:defaultValue="18"
        android:key="endingTime"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:persistent="true"
        android:summary="Time to end tracking."
        android:title="Ending Time" />

</PreferenceScreen>
